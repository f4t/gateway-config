	<probes>
		<probe name="someserver">
			<hostname>localhost</hostname>
			<port>17036</port>
		</probe>
	</probes>
	<managedEntities>
		<managedEntity name="Some Server">
			<probe ref="someserver"/>
			<addTypes>
				<type ref="Infra"/>
			</addTypes>
		</managedEntity>
	</managedEntities>
	<types>
		<type name="Infra">
			<sampler ref="CPU"/>
			<sampler ref="Disk"/>
			<sampler ref="Hardware"/>
		</type>
	</types>
	<samplers>
		<sampler name="CPU">
			<var-group>
				<data>Infra</data>
			</var-group>
			<plugin>
				<cpu/>
			</plugin>
		</sampler>
		<sampler name="Disk">
			<var-group>
				<data>Infra</data>
			</var-group>
			<plugin>
				<disk>
					<autoDetect>
						<data>true</data>
					</autoDetect>
				</disk>
			</plugin>
		</sampler>
		<sampler name="Hardware">
			<var-group>
				<data>Infra</data>
			</var-group>
			<plugin>
				<hardware/>
			</plugin>
		</sampler>
	</samplers>
	<rules>
		<rule name="CPU">
			<targets>
				<target>/geneos/gateway/directory/probe/managedEntity/sampler[(@name=&quot;CPU&quot;)][(@type=&quot;Infra&quot;)]/dataview[(@name=&quot;CPU&quot;)]/rows/row[(@name=&quot;Average_cpu&quot;)]/cell[(@column=&quot;percentUtilisation&quot;)]</target>
